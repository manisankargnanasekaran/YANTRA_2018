<p id="notice"><%= notice %></p>

<h1>Shifts</h1>

<table>
  <thead>
    <tr>
      <th>Working time</th>
      <th>No of shift</th>
      <th>Day start time</th>
      <th>Isactive</th>
      <th>Deleted at</th>
      <th>Working time dummy</th>
      <th>Day start time dummy</th>
      <th>Tenant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shifts.each do |shift| %>
      <tr>
        <td><%= shift.working_time %></td>
        <td><%= shift.no_of_shift %></td>
        <td><%= shift.day_start_time %></td>
        <td><%= shift.isactive %></td>
        <td><%= shift.deleted_at %></td>
        <td><%= shift.working_time_dummy %></td>
        <td><%= shift.day_start_time_dummy %></td>
        <td><%= shift.tenant %></td>
        <td><%= link_to 'Show', shift %></td>
        <td><%= link_to 'Edit', edit_shift_path(shift) %></td>
        <td><%= link_to 'Destroy', shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

